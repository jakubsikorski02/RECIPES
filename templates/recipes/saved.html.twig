{% extends 'base.html.twig' %}

{% block body %}

		<div class="row mx-auto">
		<h1>Saved Recipes ({{savedRecipes|length}})</h1>
		{% if savedRecipes > 0 %}
		 {% for savedRecipe in savedRecipes %}
			<div class="col-md-6 mb-4">
				<div class="card h-100">
					<div class="card-body d-flex flex-column justify-content-between">
						<h2 class="card-title mb-2">{{ savedRecipe.name }}</h2>
						<img src="{{ savedRecipe.imagePath }}" alt="Recipe Image" class="img-fluid">
						<a href="/recipes/{{ savedRecipe.id }}" class="stretched-link btn btn-light mt-2">See the full recipe</a>
					</div>
				</div>
			</div>
			{% else %}
				<p>No saved recipes yet.</p>
		{% endfor %}
		{% endif %}
	</div>
{% endblock %}

